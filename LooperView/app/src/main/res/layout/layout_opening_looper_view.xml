<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_tutorial_1_16to9"
    android:orientation="vertical"
    android:weightSum="4.5">


    <TextView
        android:id="@+id/intro_mainTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center_horizontal|bottom"
        android:text="Motion Graphics Title"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/intro_subtitle"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="Galvanize your videos with cinematic titles"
        android:textColor="#fff"
        android:textSize="15sp" />


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/intro_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/intro_point_container"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

    </LinearLayout>
</LinearLayout>