<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_tutorial_1_16to9"
    android:orientation="vertical"
    android:weightSum="4.5">


    <TextView
        android:id="@+id/intro_mainTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:gravity="center_horizontal|bottom"
        android:text="title was not loaded"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/intro_subtitle"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_weight="0.6"
        android:gravity="center"
        android:text="title was not loaded"
        android:textColor="#fff"
        android:textSize="20sp" />


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/intro_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="52dp"
        android:layout_weight="3"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/intro_point_container"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
    </LinearLayout>
    <Button
        android:id="@+id/btn_try"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:textAllCaps="false"
        android:text="Try it now!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/shape_looper_view"
        android:layout_height="40dp"/>
</LinearLayout>